{
  "name": "kfrontts",
	"displayName": "kfrontTS",
	"description": "kfront prototype",
	"version": "0.0.9",
	"publisher": "E.Chaumont",
	"engines": {
		"vscode": "^1.63.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"        
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "KFRONT",
				"properties": {
					"khub.backendUrl": {
						"type": "string",
						"default": false
					}
				}
			}
		],
		"views":{
			"explorer": [
				{
					"id": "kfrontTreeView",
					"name": "Remotes K8S systems"
				}
			]
		},			
		"commands": [
			{
				"command": "kfront.refresh",
				"title": "kfront refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "kfront.uninstall_deployment",
				"title": "Uninstall"	
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "kfront.refresh",
					"when": "view == kfrontTreeView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "kfront.uninstall_deployment",
					"when": "view == kfrontTreeView && viewItem == helmChart"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.2",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
